{{ 'section-hero-slider.css' | asset_url | stylesheet_tag }}
<script src="{{ 'hero-slider.js' | asset_url }}" defer="defer"></script>

<div class="hero-slider color-{{ section.settings.color_scheme }}" data-autoplay="true" data-slide-interval="5000">
  <div class="hero-slider__slides" id="hero-slider-{{ section.id }}">
    {%- for block in section.blocks -%}
      <div
        class="hero-slider__slide {% if forloop.first %}active{% endif %}"
        data-slide-index="{{ forloop.index0 }}"
        data-block-id="{{ block.id }}"
        {% if block.settings.image != blank %}
          style="background-image: url({{ block.settings.image | image_url: width: 2000 }});"
        {% endif %}
        {{ block.shopify_attributes }}
      >
        <div class="hero-slider__content-container">
          <div class="hero-slider__content">
            {%- if block.settings.heading != blank -%}
              <h2 class="hero-slider__heading animate-element">{{ block.settings.heading }}</h2>
            {%- endif -%}

            {%- if block.settings.subtext != blank -%}
              <div class="hero-slider__subtext rte animate-element">{{ block.settings.subtext }}</div>
            {%- endif -%}

            {%- if block.settings.button_label != blank -%}
              <a href="{{ block.settings.button_link }}" class="hero-slider__button animate-element">
                {{ block.settings.button_label | escape }}
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <div class="hero-slider__nav">
      <div class="hero-slider__dots">
        {%- for block in section.blocks -%}
          <button
            class="hero-slider__dot {% if forloop.first %}active{% endif %}"
            data-slide-index="{{ forloop.index0 }}"
            aria-label="{{ 'sections.slideshow.slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
          >
            <span class="visually-hidden">
              {{- 'sections.slideshow.slide' | t }}
              {{ forloop.index }}
              {{ 'general.slider.of' | t }}
              {{ forloop.length -}}
            </span>
          </button>
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Animation for elements when slide becomes active
    const animateSlideContent = (slide) => {
      const elements = slide.querySelectorAll('.animate-element');
      
      elements.forEach((el, index) => {
        // Reset animation
        el.style.opacity = '0';
        el.style.transform = 'translateY(20px)';
        
        // Trigger animation with delay
        setTimeout(() => {
          el.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
          el.style.opacity = '1';
          el.style.transform = 'translateY(0)';
        }, 100 + (index * 150));
      });
    };
    
    // Initialize animations for first slide
    const firstSlide = document.querySelector('.hero-slider__slide.active');
    if (firstSlide) {
      animateSlideContent(firstSlide);
    }
    
    // Add event listener for slide changes
    document.addEventListener('slideChange', function(e) {
      const newSlide = e.detail.newSlide;
      if (newSlide) {
        animateSlideContent(newSlide);
      }
    });
  });
</script>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "section section-hero-slider",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Farveskema",
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Baggrundsbillede"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "TANREVEL LIVING",
          "label": "Overskrift"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "<p>Smukke boligtekstiler af allergivenlige og bæredygtige kvaliteter - præcis som et hjem skal føles.</p>",
          "label": "Undertekst"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Shop",
          "label": "Knap tekst"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Knap link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
