{{ 'section-hero-slider.css' | asset_url | stylesheet_tag }}
<script src="{{ 'hero-slider.js' | asset_url }}" defer="defer"></script>

<div class="hero-slider" data-autoplay="true" data-slide-interval="5000">
  <div class="hero-slider__slides" id="hero-slider-{{ section.id }}">
    {%- for block in section.blocks -%}
      <div
        class="hero-slider__slide {% if forloop.first %}active{% endif %}"
        data-slide-index="{{ forloop.index0 }}"
        data-block-id="{{ block.id }}"
        {% if block.settings.image != blank %}
          style="background-image: url({{ block.settings.image | image_url: width: 2000 }});"
        {% endif %}
      >
        <div class="hero-slider__content-container">
          <div class="hero-slider__content">
            {%- if block.settings.heading != blank -%}
              <h2 class="hero-slider__heading">{{ block.settings.heading }}</h2>
            {%- endif -%}

            {%- if block.settings.subtext != blank -%}
              <div class="hero-slider__subtext rte">{{ block.settings.subtext }}</div>
            {%- endif -%}

            {%- if block.settings.button_label != blank -%}
              <a href="{{ block.settings.button_link }}" class="hero-slider__button">
                {{ block.settings.button_label | escape }}
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <div class="hero-slider__nav">
      <div class="hero-slider__dots">
        {%- for block in section.blocks -%}
          <button
            class="hero-slider__dot {% if forloop.first %}active{% endif %}"
            data-slide-index="{{ forloop.index0 }}"
            aria-label="{{ 'sections.slideshow.slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
          >
            <span class="visually-hidden">
              {{- 'sections.slideshow.slide' | t }}
              {{ forloop.index }}
              {{ 'general.slider.of' | t }}
              {{ forloop.length -}}
            </span>
          </button>
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "section section-hero-slider",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Farveskema",
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Baggrundsbillede"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "TANREVEL LIVING",
          "label": "Overskrift"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "<p>Smukke boligtekstiler af allergivenlige og bæredygtige kvaliteter - præcis som et hjem skal føles.</p>",
          "label": "Undertekst"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Shop",
          "label": "Knap tekst"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Knap link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
